<div class="container">
  <h3>Location Details</h3>
  <form>
    <div class="form-group">
      <label for="inputAddress">Address</label>
      {{#form-alert-error
        errorMessage="Enter a valid address"
        isError=model.errors.is_invalid_address
      }}
        {{textarea class="form-control" value=model.address}}
      {{/form-alert-error}}
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputCity">City</label>
        {{#form-alert-error
          errorMessage="Enter a valid city"
          isError=model.errors.is_invalid_city
        }}
          {{input class="form-control" value=model.city}}
        {{/form-alert-error}}
      </div>
      <div class="form-group col-md-4">
        <label for="inputState">State</label>
        {{#form-alert-error
          errorMessage="Enter a valid state"
          isError=model.errors.is_invalid_state
        }}
          {{#x-select
            class="form-control"
            value=model.state
            on-change=(action "selectState") as |xs|}}
            {{#each states as |state|}}
              {{#xs.option value=state}}{{state.name}}{{/xs.option}}
            {{/each}}
          {{/x-select}}
        {{/form-alert-error}}
      </div>
      <div class="form-group col-md-2">
        <label for="inputZip">Zip</label>
        {{#form-alert-error
          errorMessage="Enter a valid zip code"
          isError=model.errors.is_invalid_zip_code
        }}
          {{input class="form-control" value=model.zip_code}}
        {{/form-alert-error}}
      </div>
    </div>
    <button type="submit" class="btn btn-primary" {{action "validateFormAndProceed"}}>Proceed</button>
  </form>
</div>
