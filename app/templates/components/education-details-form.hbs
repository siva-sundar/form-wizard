<div class="container">
  <h3>Educational details</h3>
  <form >
    <div class="form-group">
      <label>Qualification</label>
      {{#form-alert-error
        errorMessage="Enter a valid qualification"
        isError=model.errors.is_invalid_qualification
      }}
        {{input class="form-control" value=model.qualification}}
      {{/form-alert-error}}
    </div>
    <div class="form-group">
      <label>Institution Name</label>
      {{#form-alert-error
        errorMessage="Enter a valid institution name"
        isError=model.errors.is_invalid_institution_name
      }}
        {{input class="form-control" value=model.institution_name}}
      {{/form-alert-error}}
    </div>
    <div class="form-group ">
      <button
       type="submit"
       class="btn btn-primary"
       {{action "validateFormAndProceed"}}
       >
       Save
      </button>
    </div>
  </form>
</div>
