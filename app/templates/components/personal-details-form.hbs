<div class="container">
  <h3>Personal details</h3>
  <form >
    <div class="form-group">
      <label>Email</label>
      {{#form-alert-error
        errorMessage="Enter a valid email address"
        isError=model.errors.is_invalid_email_id
      }}
        {{input class="form-control" value=model.email_id}}
      {{/form-alert-error}}
    </div>
    <div class="form-group">
      <label>Alternate Email ID</label>
      {{#form-alert-error
        errorMessage="Enter a valid alternate email address"
        isError=model.errors.is_invalid_alternate_email_id
      }}
        {{input class="form-control" value=model.alternate_email_id}}
      {{/form-alert-error}}
    </div>
    <div class="form-group ">
      <button
       type="submit"
       class="btn btn-primary"
       {{action "validateFormAndProceed"}}
       >
       Proceed
      </button>
    </div>
  </form>
</div>
